<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/llparks">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="Showing the parks near by you"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:id="@+id/parkstv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:id="@+id/parksrg">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gandipet park"
                android:id="@+id/parksr1"
                android:textSize="35sp"
        />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocean park"
                android:id="@+id/parksr2"
                android:layout_centerHorizontal="true"
                android:textSize="35sp"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SkyZone"
                android:id="@+id/parksr3"
                android:textSize="35sp"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Central park"
                android:id="@+id/parksr4"
                android:textSize="35sp"/>

    </RadioGroup>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select "
            android:textSize="30sp"
            android:id="@+id/selparks"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="125dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"/>

</LinearLayout>